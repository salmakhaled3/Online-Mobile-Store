@model UserLoginView
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://kit.fontawesome.com/64d58efce2.js"
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/logindesign.css" />
    <title>Sign in & Sign up Form</title>
</head>
<body>
    <div class="container">
        <div class="forms-container">
            <div class="signin-signup">
                <form asp-action="login" asp-controller="Account" class="sign-in-form">
                    <h2 class="title">Sign in</h2>
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        <input asp-for="Email" placeholder="Email" />
                        
                    </div>
                    <span asp-validation-for="Email" style="color:red"></span>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input asp-for="Password" placeholder="Password" />
                        
                    </div>
                    <span asp-validation-for="Password" style="color:red"></span>
                   
                    <input  type="submit" value="Login" class="btn solid" />
                    <div asp-validation-summary="ModelOnly"  style="color:red"></div>

                </form>
                @Html.Partial("registarview")
            </div>
        </div>

        <div class="panels-container">
            <div class="panel left-panel">
                <div class="content">
                    <h3>New here ?</h3>
                    <p>
                        Join the shopping revolution! Sign up and shop smarter with us.
                    </p>
                    <button class="btn transparent" id="sign-up-btn">
                        Sign up
                    </button>
                </div>
                <img src="/loginimages/Sign up-cuate.png" class="image" alt="" />
            </div>
            <div class="panel right-panel">
                <div class="content">
                    <h3>One of us ?</h3>
                    <p>
                       Welcome Back
                    </p>
                    <button class="btn transparent" id="sign-in-btn">
                        Sign in
                    </button>
                </div>
                <img src="/loginimages/signup (2).png" class="image" alt="" />
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="/js/login.js"></script>
</body>

</html>
