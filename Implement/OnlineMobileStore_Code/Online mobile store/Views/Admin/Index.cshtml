@model IEnumerable<User>
@{
	Layout = "dashboard";

}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/js/jsalertsupplier.js"></script>

<div class="container">
    <table id="dataTable" class="table table-bordered table-striped">
        <thead style="background-color:#CFE8FF;">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">User Name</th>
                <th scope="col">Email</th>
                <th scope="col">Password</th>
                <th scope="col">Gender</th>
                <th scope="col">Role</th>
                <th scope="col">Action</th>
                
            </tr>
        </thead>
        <tbody>
            @if (ViewBag.DeletionNotAllowed ==null)
            {
                <script>
                    cantdelete();
                </script>
            }

            @if (Model.Count() > 0)
            {
                foreach (var user in Model)
                {
                    <tr>
                        <td>@user.ID</td>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>@user.Password</td>
                        <td>@user.Gender</td>
                        <td>@user.Role</td>

                        <td>
                            <a href="#" onclick="confirmDelete(@user.ID)" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center"><div class="alert alert-danger">There are no Users to show</div></td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="//cdn.datatables.net/2.0.5/js/dataTables.min.js"></script>


}
@section alertscript{
    <script>

        $(document).ready(function () {
            $('#dataTable').DataTable();
        });
        </script>
        }
