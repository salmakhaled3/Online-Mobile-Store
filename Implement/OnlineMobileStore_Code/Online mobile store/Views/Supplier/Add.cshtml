@model Product
@{
    Layout = "dashboard";
}

<div class="container mt-5">

    <form method="post" asp-action="Add" asp-controller="Supplier" enctype="multipart/form-data">

        @if (ViewBag.ErrorMsg != null)
        {
            <div class="alert alert-danger">@ViewBag.ErrorMsg</div>
        }
        @Html.Partial("Form", Model)
        <a asp-action="Index" asp-controller="Supplier" class="btn btn-secondary custom-btn">Cancel</a>
    </form>
</div>
@section scripts {
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
